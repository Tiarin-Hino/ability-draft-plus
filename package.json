{
  "name": "ability-draft-plus",
  "version": "1.1.1",
  "description": "Dota 2 Ability Draft Overlay with ML-powered ability recognition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env HOT_RELOAD=true electron .",
    "dev:debug": "cross-env HOT_RELOAD=true DEBUG=true electron .",
    "prepare-config": "node scripts/prepare-app-config.js",
    "rebuild": "electron-rebuild -f",
    "postinstall": "npm run rebuild && node scripts/fix-tfjs-node-build.js",
    "dist": "npm run prepare-config && electron-builder",
    "generate-mock-data": "node scripts/generate-mock-data.js"
  },
  "keywords": [
    "dota2",
    "ability draft",
    "overlay",
    "electron",
    "tensorflow"
  ],
  "author": "Tiarin Hino",
  "license": "ISC",
  "lint-staged": {
    "*.{js,json}": "echo 'Staged files ready for commit'"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "patch-package": "^8.0.0"
  },
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.22.0",
    "archiver": "^7.0.1",
    "axios": "^1.8.4",
    "better-sqlite3": "^11.9.1",
    "cheerio": "^1.0.0",
    "electron-updater": "^6.6.2",
    "nvm": "^0.0.4",
    "screenshot-desktop": "^1.15.1",
    "sharp": "^0.34.1",
    "winston": "^3.18.3"
  },
  "build": {
    "appId": "com.tiarinhino.dota2abilitydraftplus",
    "productName": "Dota 2 Ability Draft Plus",
    "copyright": "Copyright Â© 2025 Tiarin Hino",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "tiarin-hino",
      "repo": "ability-draft-plus"
    },
    "files": [
      "**/*",
      "!training_data/**",
      "!failed-samples/**",
      "!*.code-workspace",
      "!README.md",
      "!CONTRIBUTING.md",
      "!LICENSE",
      "!.env",
      "!node_modules/@tensorflow/tfjs-node/deps/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{thumbs.db,Thumbs.db,.pnp.*}",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "dota_ad_data.db",
        "to": "dota_ad_data.db"
      },
      {
        "from": "config/layout_coordinates.json",
        "to": "config/layout_coordinates.json"
      },
      {
        "from": "model/tfjs_model",
        "to": "model/tfjs_model"
      },
      {
        "from": "resources/images",
        "to": "resources/images"
      },
      {
        "from": "locales",
        "to": "locales"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/@tensorflow/tfjs-node/lib/**/tfjs_binding.node",
      "**/node_modules/@tensorflow/tfjs-node/deps/tensorflow.dll",
      "**/node_modules/better-sqlite3/build/Release/better_sqlite3.node",
      "**/node_modules/sharp/build/Release/**",
      "**/node_modules/screenshot-desktop/lib/win32/**"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
